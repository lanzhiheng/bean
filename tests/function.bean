fn simple(a, b) {
  return b
}

assert(simple(1, 2), 2)
assert(simple(1, 3), 3)
assert(simple(1), nil)

fn sum1(i) {
  if (i > 1) {
    return sum1(i - 1) + i
  } else {
    return i
  }
}

assert(sum1(4000), 8002000)

fn sum2(i) {
  if (i > 1) {
    return sum2(i - 1) + i
  }
  return i
}

assert(sum2(4000), 8002000)

a = [1,2,3,4,5,6]

g = a.map(fn a(i) {
  if (i > 1) {
    return a(i - 1)
  }
  i * 2
})
assert(g, [2,2,2,2,2,2])