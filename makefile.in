CC = gcc -v
TARGET = bean
CFLAGS = -g -Wall
TFLAGS = -g -Wall -DTEST
ALL_FIELS = $(wildcard *.c)
# Remove http module temporarily
COMPILE_FILES = $(filter-out bhttp.c,$(ALL_FIELS))
CURL = @LIBCURL@ @LIBCURL_CPPFLAGS@

$(TARGET):$(OBJS)
	$(CC) -o $(TARGET) $(COMPILE_FILES) $(CFLAGS) $(LIBS)

test:
	$(CC) -o $(TARGET) $(COMPILE_FILES) $(TFLAGS) $(LIBS)
	./$(TARGET)

clean:
	-$(RM) $(TARGET)
